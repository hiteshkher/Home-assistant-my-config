binary_sensor: #IN_PUT
  - platform: gpio
    name: PS4_10_MANUAL
    pin:
      number: GPIO5 #D1
      inverted: true
      mode:
        input: true
        pullup: True
    filters:
      - delayed_off: 2s
    on_press:
      then:
      - switch.turn_on: PS4_10
    on_release:
      then:  
      - switch.turn_off: PS4_10


